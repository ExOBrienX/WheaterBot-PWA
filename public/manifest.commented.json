
  //Nombre completo de la aplicación (usado en pantalla de instalación)
  "name": "WheaterBot - Clima con IA",
  
  // Nombre corto (usado cuando espacio es limitado)
  "short_name": "WheaterBot",
  
  // Descripción que aparece en la tienda o pantalla de instalación
  "description": "Chatbot que proporciona pronósticos meteorológicos con recomendaciones inteligentes impulsadas por IA",
  
  // URL donde comienza la app (siempre /)
  "start_url": "/",
  
  // Alcance de la PWA (todas las rutas bajo /)
  "scope": "/",
  
  // Modo de visualización:
  // - "standalone" = se abre como app nativa (sin barra de dirección)
  // - "fullscreen" = pantalla completa
  // - "minimal-ui" = solo controles mínimos
  "display": "standalone",
  
  // Orientación de pantalla
  // - "portrait-primary" = vertical
  // - "landscape-primary" = horizontal
  "orientation": "portrait-primary",
  
  // Color de fondo de la pantalla de inicio
  "background_color": "#1a1a2e",
  
  // Color de la barra de tareas/status bar
  "theme_color": "#0f3460",
  
  // No sugerir apps relacionadas
  "prefer_related_applications": false,
  
  // Array de iconos en diferentes tamaños y propósitos
  "icons": [
    //{
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"  // Icono normal
    },
    //{
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
   // {
      "src": "/icon-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"  // Android puede aplicar máscara al icono
    }
  ],
  
  // Screenshots para la tienda o pantalla de instalación
  "screenshots": [
    //{
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "wide"  // Vista en pantalla ancha
    },
    //{
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "form_factor": "narrow"  // Vista en pantalla estrecha
    }
  ],
  
  // Categorías para tiendas de apps
  "categories": ["weather", "utilities"],
  
  // Accesos directos que aparecen al hacer click largo en el icono
  "shortcuts": [
